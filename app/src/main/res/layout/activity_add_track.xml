<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название трека"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:inputType="text"
        android:hint="Введите название трека" />

    <TextView
        android:id="@+id/textViewArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Исполнитель"
        android:textSize="16sp"
        android:layout_below="@id/editTextTitle"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewArtist"
        android:inputType="text"
        android:hint="Введите имя исполнителя" />

    <TextView
        android:id="@+id/textViewAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Альбом"
        android:textSize="16sp"
        android:layout_below="@id/editTextArtist"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAlbum"
        android:inputType="text"
        android:hint="Введите название альбома" />

    <TextView
        android:id="@+id/textViewDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Длительность"
        android:textSize="16sp"
        android:layout_below="@id/editTextAlbum"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDuration"
        android:inputType="number"
        android:hint="Введите длительность в секундах" />

    <TextView
        android:id="@+id/textViewTrackPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Путь к треку или URL"
        android:textSize="16sp"
        android:layout_below="@id/editTextDuration"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextTrackPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTrackPath"
        android:inputType="text"
        android:hint="Введите путь к треку или URL" />

    <Button
        android:id="@+id/buttonChooseFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTrackPath"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Выбрать файл" />

    <Button
        android:id="@+id/buttonAddTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonChooseFile"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Добавить трек" />
</RelativeLayout>
